@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<head>

    <title>@ViewData["Title"] - Projekat Web Portal</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!--CSS-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

    <div class="signIn-container d-flex">

		<div class="signIn-asside">
			<img class="logo" src="~/logo/WebPortalSquare.jpg"/>
		</div>

		<div class="signIn-form">
			<form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<h1 class="signIn-title">Web portal</h1>
				

                <div class="mb-3">
                    <input asp-for="Input.UserName" class="form-control" placeholder="Korisničko ime" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.UserName" class="text-danger"></span>
                </div>

                <div class="mb-5">
                    <input asp-for="Input.Password" class="form-control" placeholder="Šifra" autocomplete="current-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
				
				<div class="form-btns">
					<a id="forgot-password" asp-page="./ForgotPassword" class="form-link">Zaboravili ste šifru?</a>
					<button type="submit" class="btn btn-outline-danger form-btn">Prijavi se</button>
				</div>

			</form>
		</div>

	</div>

</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}