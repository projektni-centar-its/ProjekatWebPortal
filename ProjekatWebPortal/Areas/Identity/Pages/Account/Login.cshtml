@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<head>

    <title>@ViewData["Title"] - Projekat Web Portal</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!--CSS-->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
<body>

    <div class="background-image-container">
        <div class="signIn-container d-flex">

            <div class="signIn-asside">
@*                <h1 class="">Web portal</h1>
*@            </div>
            <img class="loginlogo" src="~/logo/WebPortalSquare.jpg" />

            <div class="signIn-form login">
                <h3>
                    Prijavite se !
                </h3>

@*                <p class="">Nisi registrovan?   <a href="#">Registruj se</a> </p>
*@

                <form id="account" method="post">

                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>



                    <div class="mb-3">
                        <label for="e-mail">
                            Korisnicko ime :
                        </label>
                        <input asp-for="Input.Email" class="form-control" placeholder="E-mail" autocomplete="email" aria-required="true" />

                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <div class="mb-5">
                        <label for="pasword">
                            Sifra :
                        </label>
                        <input asp-for="Input.Password" class="form-control" placeholder="Šifra" autocomplete="current-password" aria-required="true" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>

                    <div class="form-btns">
                        <a id="forgot-password" asp-page="./ForgotPassword" class="form-link">Zaboravili ste šifru?</a>
                        <button type="submit" class="btn btn-outline-danger form-btn">Prijavi se</button>
                    </div>

                </form>
            </div>

        </div>
    </div>
</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}